<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_large"
    android:background="?attr/colorSurface">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:src="@drawable/ic_social_people"
        android:contentDescription="Social Icon"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tv_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/under_construction"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_size_title_medium"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/feature_description_social"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="@dimen/text_size_body_small" />

</LinearLayout>
