<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expense_tracker"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="@dimen/text_size_body_small" />

                <TextView
                    android:id="@+id/tv_total_spent_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/currency_format"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="@dimen/text_size_title_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_expense_count_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="0 expenses"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="@dimen/text_size_body_small" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Spending Graph Card (compact preview) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_spending_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spending_graph"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="@dimen/text_size_body_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_spending_graph_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/spending_graph_subtitle"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="@dimen/text_size_body_small" />

                <!-- Time Range Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/range_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_range_7"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/range_7_days" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_range_30"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/range_30_days" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_range_90"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/range_90_days" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- MPAndroidChart LineChart -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_spending"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/margin_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_details"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/view_details" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Monthly Goal Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_goal_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_progress"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="@dimen/text_size_body_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_goal_progress_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/no_goals_set"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="@dimen/text_size_body_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_manage_goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/manage_goals" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_quick_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_actions"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="@dimen/text_size_body_medium"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_analytics"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:text="@string/view_analytics" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_quick_add_expense"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add_expense" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
