<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_card_margin_horizontal"
    android:layout_marginEnd="@dimen/item_card_margin_horizontal"
    android:layout_marginTop="@dimen/item_card_margin_vertical"
    android:layout_marginBottom="@dimen/item_card_margin_vertical"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardBackgroundColor="?attr/colorSecondaryContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/item_card_padding"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_category_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category Name"
            android:textSize="@dimen/text_size_title_medium"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_category_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="3 items"
            android:textSize="@dimen/text_size_body_large"
            android:textColor="?attr/colorOnSecondaryContainer" />

        <ImageView
            android:id="@+id/iv_expand_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="Expand category" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
