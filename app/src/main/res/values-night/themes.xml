<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark Mode -->
    <style name="Base.Theme.Auto_Saver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors - Red Accent for Dark Mode -->
        <item name="colorPrimary">@color/red_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/red_dark</item>
        <item name="colorOnPrimaryContainer">@color/red_light</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/red_light</item>
        <item name="colorOnSecondary">@color/gray_900</item>

        <!-- Background & Surface -->
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/surface_dark_elevated</item>
        <item name="colorOnSurfaceVariant">@color/gray_400</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Auto_Saver" parent="Base.Theme.Auto_Saver" />

    <!-- Splash Screen Theme using Android 12+ API - Dark Mode -->
    <style name="Theme.Auto_Saver.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/dark_gray</item>

        <!-- Set the splash screen icon/logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_start_screen</item>

        <!-- Icon size (optional, default is 240dp) -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Post-splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.Auto_Saver</item>
    </style>
</resources>
